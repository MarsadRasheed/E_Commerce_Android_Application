<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="8dp"
            android:layout_margin="8dp"
            android:id="@+id/repairerText"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lets repair your Gadget!"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
         />

        <TextView
            android:id="@+id/repairerNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/repairerText"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:text="Name : "
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/repairerEditNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/repairerNameText"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@id/repairerNameText"
            android:hint="Enter your Name"></EditText>


        <TextView
            android:id="@+id/repairerContactText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/repairerEditNameText"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="Contact : "
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/repairerEditContactText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/repairerContactText"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/repairerContactText"
            android:layout_marginRight="8dp"
            android:hint="Enter your Contact"></EditText>


        <TextView
            android:id="@+id/repairerCnicText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/repairerEditContactText"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="CNIC : "
            android:layout_marginLeft="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/repairerEditCnicText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/repairerCnicText"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@id/repairerCnicText"
            android:hint="Enter your CNIC (optional)"></EditText>


        <TextView
            android:id="@+id/repairerDTText"
            android:layout_width="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/repairerEditCnicText"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="Device Type : "
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/repairerEditDTText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/repairerDTText"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/repairerDTText"
            android:layout_marginRight="8dp"
            android:hint="Enter your Device Type"></EditText>

        <TextView
            android:id="@+id/repairerDNText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/repairerEditDTText"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="Device Name : "
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/repairerEditDNText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/repairerDNText"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/repairerDNText"
            android:layout_marginRight="8dp"
            android:hint="Enter your Device Name"></EditText>


        <TextView
            android:id="@+id/repairerDMText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/repairerEditDNText"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="Device Model : "
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/repairerEditDMText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/repairerDMText"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/repairerDMText"
            android:layout_marginRight="8dp"
            android:hint="Enter your Device Model"></EditText>

        <TextView
            android:id="@+id/repairerDPText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/repairerEditDMText"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="Device Problem : "
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/repairerEditDPText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/repairerDPText"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@id/repairerDPText"
            android:hint="Enter Device Problem"></EditText>


        <TextView
            android:id="@+id/repairerAddressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/repairerEditDPText"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="Address : "
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/repairerEditAddressText"
            android:layout_width="match_parent"
            android:layout_marginRight="8dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/repairerAddressText"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/repairerAddressText"
            android:hint="Enter your address"></EditText>

    </RelativeLayout>

</ScrollView>